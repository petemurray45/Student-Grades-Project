<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./ui/admin/stylesModules.css">
    <link rel="stylesheet" href="./ui/admin/stylesMessaging.css">
    <title>Student Progression</title>
</head>
<body>

    <%- include ("../partials/sidebar") %>

    <div class="grid-box">
        <div class="container">
            <div class="module-box">
                <div class="title-box">
                    <h1 class="title">
                    View Current Student Progression
                    </h1>
                </div>
                <div class="table-box">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Academic Year</th>
                                <th>Total Credits</th>
                                <th>Average Grades</th>
                                <th>Core Modules Passed</th>
                                <th>Decision</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach(result => { %>
                                <tr>
                                    <td><%= result.student_id %></td>
                                    <td><%= result.name %></td>
                                    <td><%= result.academic_year %></td>
                                    <td><%= result.total_credits %></td>
                                    <td><%= result.average_grade %></td>
                                    <td><%= result.core_modules_passed ? "YES" : "NO" %></td>
                                    <td><%= result.decision %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                


            </div>
        </div>
    </div>
    
</body>
</html>