<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./ui/admin/stylesModules.css">
    
    <title>Modules</title>
</head>
<body>

    <%-include("../partials/sidebar")%>

    <div class="grid-box">
        <div class="container">
          <div class="module-box">
            <div class="table-box">
                <table class="table">
                    <thead>
                        <tr>
                          <th>Subject Code</abbr></th>
                          <th>Module Title</th>
                          <th>Credits</abbr></th>
                          <th>Core Module</abbr></th>
                        </tr> 
                      </thead>
                    <tbody>
                        <% modules.forEach((module, index) => { %>
                            <tr>
                                <td><%= module.subj_code %></td>
                                <td><%= module.module_title %></td>
                                <td><%= module.credit_value %></td>
                                <td><%= module.core_module %></td>
                                <td>
                                    <button class="button is-small is-info edit-btn" data-module="<%= JSON.stringify(module) %>">Edit</button>
                                </td> 
                            </tr>
                       <% }); %>
                    </tbody>
                </table>


                <div class="modal" id="editModuleModal">
                    <div class="modal-background" onclick="closeModuleModal()"></div>
                    <div class="modal-card">
                      <header class="modal-card-head">
                        <p class="modal-card-title">Edit Module</p>
                        <button class="delete" aria-label="close" onclick="closeModuleModal()"></button>
                      </header>
                      <section class="modal-card-body">
                        <form id="editModuleForm" onsubmit="submitModuleEdit(); return false">
                          <input type="hidden" id="module-id">
                  
                          <div class="field">
                            <label class="label">Module Title</label>
                            <div class="control">
                              <input class="input" type="text" id="module-title" required>
                            </div>
                          </div>
                  
                          <div class="field">
                            <label class="label">Credits</label>
                            <div class="control">
                              <input class="input" type="number" id="credit-value" required>
                            </div>
                          </div>
                  
                          <div class="field">
                            <label class="label">Core Module</label>
                            <div class="control">
                              <div class="select">
                                <select id="core-module">
                                  <option value="YES">YES</option>
                                  <option value="NO">NO</option>
                                </select>
                              </div>
                            </div>
                          </div>
                        </form>
                      </section>
                      <footer class="modal-card-foot">
                        <button class="button is-success" onclick="submitModuleEdit()">Save</button>
                        <button class="button" onclick="closeModuleModal()">Cancel</button>
                      </footer>
                    </div>
                  </div>
                <div style="height: 2rem;"></div>

            </div>
          </div>
        </div>
    </div>

    <script src="/modules.js"></script>
    
</body>
</html>